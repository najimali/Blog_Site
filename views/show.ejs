<%-include("./partials/header")-%>
<link rel="stylesheet" href="/stylesheets/show.css" />
<div class="ui one column grid wrapper">
  <div class="row">
    <div class="column">
      <h1>Show Page</h1>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <img src="<%=blog.image%>" alt="" />
    </div>
  </div>
  <div class="row">
    <div class="column">
      <p><%=blog.description%></p>
    </div>
  </div>
  <div class="row" style="justify-content: space-evenly">
    <a
      href="/<%=blog._id%>/edit"
      style="margin: 1rem 0"
      class="ui inverted green button"
      >Update</a
    >
    <form action="/<%=blog._id%>?_method=DELETE" method="post">
      <button style="margin: 1rem 0" class="ui inverted red button">
        Delete
      </button>
    </form>
  </div>
</div>

<%-include("./partials/footer")-%>
