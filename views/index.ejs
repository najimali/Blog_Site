<%-include("./partials/header")-%>
<link rel="stylesheet" href="/stylesheets/index.css">
<div class="wrapper">
    <h1 id="app__name">Blog Site</h1>
    <main>
        <% blogs.forEach(blog => { %>
        <div class="top__container">
            <div class="imageBox">
                <img src="<%=blog.image%>" alt="">
            </div>
            <div class="content">
                <p><%=blog.description%></p>

            </div>
        </div>
        <div class="bottom__container">
            <button class="read__more ui inverted red button">Read More</button>
            <p class=" ui red basic button">Submitted by Najim</p>
        </div>
        <% }); %>
    </main>

</div>
<%-include("./partials/footer")-%>